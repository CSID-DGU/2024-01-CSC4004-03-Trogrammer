<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:background="@drawable/color_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="270dp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/image_refrigerator_tall"
                android:scaleType="centerInside"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/r0io7vzq6qpga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="116dp"
            android:layout_marginBottom="98dp"
            android:gravity="center"
            android:text="자취생의 냉장고"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rlx86bm1pxy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="112dp"
            android:layout_marginBottom="26dp"
            android:gravity="center"
            android:text="어떤 걸 원하시나요?"
            android:textColor="#B0AFB4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/mainMakingFood"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="48dp"
            android:background="@drawable/color_db1f30"
            android:elevation="4dp"
            android:gravity="center"
            android:text="냉장고 재료로 음식 만들기"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/mainChooseFood"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginHorizontal="48dp"
            android:background="@drawable/color_1f1f1f"
            android:elevation="4dp"
            android:gravity="center"
            android:text="원하는 음식 선택"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>